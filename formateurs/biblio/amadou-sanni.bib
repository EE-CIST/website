@book{amadou_sanni_vulnerabilite_2012,
	title = {Vulnérabilité aux {IST}/{VIH}/{SIDA} au {Sud}-{Bénin}: {Etat} des lieux et défis},
	isbn = {978-613-1-52011-2},
	shorttitle = {Vulnérabilité aux {IST}/{VIH}/{SIDA} au {Sud}-{Bénin}},
	abstract = {Cette étude est une analyse de la vulnérabilité au VIH dans vingt communes du Sud et Centre du Bénin. Elle a couvert les aspects tels que les groupes vulnérables, les interventions en cours et les canaux de communication. Ses objectifs sont de: Cibler les groupes à risques, Appréhender les interventions en cours ; Identifier les acteurs, leur implication dans la lutte contre le Sida. Les résultats indiquent une prévalence élevée de vulnérabilité aux IST et au Sida dans les localités ciblées. Multi partenariat sexuel non protégé, grossesses non voulues et avortements, fréquence des IST, caractérisent les groupes identifiés. Les points de risque sont les milieux de convergences et d'échanges, où les activités lucratives ne manquent pas. Affaires, argent, pouvoir d'achat, pauvreté, promiscuité, ignorance et sexe se confondent et expliquent les comportements à risque. On ignore le danger permanent des IST et du VIH qui, bien que connu, préoccupe peu les consciences. L'engagement des acteurs n'est donc pas à la hauteur du niveau de la vulnérabilité des populations. Des réajustements stratégiques ont été suggérés pour une adhésion des populations aux interventions contre le SIDA.},
	language = {Français},
	publisher = {Editions Universitaires Europeennes},
	author = {Amadou Sanni, Mouftaou},
	month = feb,
	year = {2012},
}

