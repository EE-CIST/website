@inproceedings{koumoi_apport_2018,
	title = {Apport des {SIG} dans l’analyse prospective de la disponibilité des terres pour une gestion participative des territoires ruraux dans le {Centre}-{Togo}},
	volume = {3},
	url = {https://hal.science/hal-02973820},
	abstract = {L’augmentation de la population surtout rurale entraîne une pression sur les terres et sur les ressources naturelles. Cela nécessite la définition des espaces disponibles à aménager pour des fins agricoles d’une part et des surfaces à aménager pour la préservation au mieux de la richesse des écosystèmes. Le présent travail se propose de montrer l’apport des Systèmes d’Information Géographiques (SIG) dans l’analyse prospective de la disponibilité des terres pour la prise de décision des élus locaux. Pour ce faire, des données d’enquête de terrain et les données secondaires ont été collectées et analysées aux moyens d’outils de cartographie et d’analyse spatiale. Les estimations et la spatialisation des terres disponibles par ménage à l’horizon 2030 révèlent une nette réduction des superficies disponibles. De 17 à 40 ha d’espaces disponibles dans certains cantons, les ménages se retrouveront entre 12 et 16 ha en 2030. En outre, l’analyse diachronique et prospective de l’occupation du sol à l’horizon 2030 a montré une nette régression des formations naturelles au profit des formations anthropiques. Pour mieux gérer ces territoires ruraux, les populations investiguées proposent pour fin d’aménagement dans différents cantons, la sensibilisation des paysans au reboisement (77,32 \%), la définition des domaines destinés au reboisement (11,53 \%) et la révision du régime foncier (6,52 \%). Sur la base de ces simulations, un modèle de planification spatial et de gestion a été défini. Il propose les différents types d’aménagement à opérer en fonction des espaces disponibles afin de maintenir l’équilibre entre les espaces agricoles et les espaces naturelles.},
	language = {fr},
	urldate = {2023-01-16},
	publisher = {Université d’Abomey-Calavi},
	author = {Koumoi, Zakariyao and Orekan, Vincent O. A.},
	month = sep,
	year = {2018},
	pages = {303--315},
	file = {Full Text PDF:C\:\\Users\\FR CIST\\Zotero\\storage\\8GMT6YWG\\Koumoi et Orekan - 2018 - APPORT DES SIG DANS L’ANALYSE PROSPECTIVE DE LA DI.pdf:application/pdf},
}

@article{koumoi_diagnostic_2018,
	title = {Diagnostic territorial participatif: vers la réalisation des « cartes a dires d’acteurs » pour l’aide à la décision dans le {Centre}-{Togo}},
	volume = {1},
	shorttitle = {Diagnostic territorial participatif},
	url = {https://hal.science/hal-02973775},
	abstract = {Le diagnostic territorial participatif revêt une importance capitale pour le développement. Le Togo qui est actuellement dans le processus de décentralisation doit faire appel à des méthodes participatives pour la planification et l’aménagement des territoires. Cet article vise à faire un état des lieux des réalités locales en spatialisant les perceptions des populations sur leurs milieux pour une meilleure prise de décision. Les données collectées concernent la perception des ménages ruraux sur la disponibilité des terres, les contraintes de défrichement de nouvelles terres, les raisons de leur appauvrissement, les contraintes de préservation d’arbres dans les champs et les causes de dégradation de la végétation. Elles ont été traitées par le logiciel SPSS et Excel. Leur spatialisation est faite par les logiciels SIG ArcGis 10.5 et PhilCarto. La perception des ménages sur la disponibilité des terres montre des réserves de terres à mobiliser dans 13 cantons. Mais, entre 50 et 90\% des ménages enquêtés présents dans 8 cantons ont des contraintes pour défricher de nouvelles terres. Outre les pratiques culturales, la pression démographique et l’utilisation des intrants et des pesticides sont reconnues par plus de 55 \% des ménages comme étant les principaux facteurs responsables de l’appauvrissement des terres. Enfin, les causes de dégradation de la végétation (croissance démographique, régime foncier, méthodes culturales et utilisation du charbon de bois/bois d’œuvre) ont été spatialisées à l’échelle des cantons par la cartographie exploratoire. Cette recherche met ainsi en exergue les caractéristiques, les enjeux et les opportunités du territoire pour une meilleure élaboration des plans d’aménagement.},
	language = {fr},
	number = {1},
	urldate = {2023-01-16},
	journal = {Annales de l'Université de Parakou, Série Science Naturelle et Agronomie},
	author = {Koumoi, Zakariyao and Orekan, Vincent O. A.},
	year = {2018},
	pages = {34--44},
	file = {Full Text PDF:C\:\\Users\\FR CIST\\Zotero\\storage\\2JNH772D\\Koumoi et Orekan - 2018 - Diagnostic territorial participatif vers la réali.pdf:application/pdf},
}

